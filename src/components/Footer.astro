---
import { Button } from '@/components/ui/button';
import { ThemeToggle } from '@/components/ThemeToggle';
import { Github, Linkedin, Twitter, Mail } from 'lucide-react';
---

<footer class="border-t border-border bg-background/80 backdrop-blur-sm mt-12">
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About Section -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Zentaza Portfolio</h3>
        <p class="text-muted-foreground">
          Fullstack Developer specializing in Software Engineering, Data Science/AI, Cybersecurity, and IoT.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li><a href="/" class="text-muted-foreground hover:text-foreground transition-colors">Home</a></li>
          <li><a href="/about" class="text-muted-foreground hover:text-foreground transition-colors">About</a></li>
          <li><a href="/portfolio" class="text-muted-foreground hover:text-foreground transition-colors">Portfolio</a></li>
          <li><a href="/blog" class="text-muted-foreground hover:text-foreground transition-colors">Blog</a></li>
          <li><a href="/contact" class="text-muted-foreground hover:text-foreground transition-colors">Contact</a></li>
        </ul>
      </div>

      <!-- Social Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Connect</h3>
        <div class="flex space-x-4">
          <Button variant="ghost" size="icon" asChild>
            <a href="https://github.com" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
              <Github class="h-5 w-5" />
            </a>
          </Button>
          <Button variant="ghost" size="icon" asChild>
            <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
              <Linkedin class="h-5 w-5" />
            </a>
          </Button>
          <Button variant="ghost" size="icon" asChild>
            <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" aria-label="Twitter">
              <Twitter class="h-5 w-5" />
            </a>
          </Button>
          <Button variant="ghost" size="icon" asChild>
            <a href="mailto:contact@example.com" aria-label="Email">
              <Mail class="h-5 w-5" />
            </a>
          </Button>
        </div>
        <div class="mt-4">
          <ThemeToggle />
        </div>
      </div>
    </div>

    <div class="border-t border-border mt-8 pt-8 text-center text-muted-foreground">
      <p>&copy; {new Date().getFullYear()} Zentaza Portfolio. All rights reserved.</p>
    </div>
  </div>
</footer>