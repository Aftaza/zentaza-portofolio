---
import MainLayout from '@/layouts/MainLayout.astro';
import { Button } from '@/components/ui/button';
import { Github, Linkedin, Twitter, Mail, Phone, MapPin, Download } from 'lucide-react';
---

<MainLayout title="Contact" description="Get in touch with Zentaza for collaborations, projects, or inquiries">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl md:text-4xl font-bold mb-8">Get In Touch</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div>
        <h2 class="text-2xl font-semibold mb-6">Contact Information</h2>
        
        <div class="space-y-6">
          <div class="flex items-start">
            <Mail className="h-6 w-6 text-primary mt-1 mr-4" />
            <div>
              <h3 class="text-lg font-medium mb-1">Email</h3>
              <a href="mailto:contact@zentaza.com" class="text-muted-foreground hover:text-foreground transition-colors">
                contact@zentaza.com
              </a>
            </div>
          </div>
          
          <div class="flex items-start">
            <Phone className="h-6 w-6 text-primary mt-1 mr-4" />
            <div>
              <h3 class="text-lg font-medium mb-1">Phone</h3>
              <a href="tel:+1234567890" class="text-muted-foreground hover:text-foreground transition-colors">
                +1 (234) 567-890
              </a>
            </div>
          </div>
          
          <div class="flex items-start">
            <MapPin className="h-6 w-6 text-primary mt-1 mr-4" />
            <div>
              <h3 class="text-lg font-medium mb-1">Location</h3>
              <p class="text-muted-foreground">
                San Francisco, CA<br />
                United States
              </p>
            </div>
          </div>
        </div>
        
        <div class="mt-8">
          <h3 class="text-lg font-medium mb-4">Connect with me</h3>
          <div class="flex space-x-4">
            <Button variant="outline" size="icon" asChild>
              <a href="https://github.com" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
                <Github className="h-5 w-5" />
              </a>
            </Button>
            <Button variant="outline" size="icon" asChild>
              <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
                <Linkedin className="h-5 w-5" />
              </a>
            </Button>
            <Button variant="outline" size="icon" asChild>
              <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" aria-label="Twitter">
                <Twitter className="h-5 w-5" />
              </a>
            </Button>
          </div>
        </div>
        
        <div class="mt-8">
          <Button asChild variant="outline">
            <a href="/cv.pdf" download>
              <Download className="mr-2 h-4 w-4" />
              Download CV
            </a>
          </Button>
        </div>
      </div>
      
      <!-- Contact Form -->
      <div>
        <h2 class="text-2xl font-semibold mb-6">Send me a message</h2>
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium mb-2">Name</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              class="w-full px-3 py-2 rounded-md border border-input bg-background focus:outline-none focus:ring-2 focus:ring-ring focus:border-ring"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium mb-2">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-3 py-2 rounded-md border border-input bg-background focus:outline-none focus:ring-2 focus:ring-ring focus:border-ring"
            />
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium mb-2">Subject</label>
            <input 
              type="text" 
              id="subject" 
              name="subject" 
              required
              class="w-full px-3 py-2 rounded-md border border-input bg-background focus:outline-none focus:ring-2 focus:ring-ring focus:border-ring"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium mb-2">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows={5} 
              required
              class="w-full px-3 py-2 rounded-md border border-input bg-background focus:outline-none focus:ring-2 focus:ring-ring focus:border-ring"
            ></textarea>
          </div>
          
          <Button type="submit" className="w-full">
            Send Message
          </Button>
        </form>
      </div>
    </div>
  </div>
</MainLayout>