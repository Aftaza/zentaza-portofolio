---
import MainLayout from '@/layouts/MainLayout.astro';

// Sample project data - in real app this would come from CMS/API
const project = {
    id: 1,
    title: 'E-Commerce Dashboard',
    subtitle: 'Modern Analytics Platform',
    description:
        'A comprehensive e-commerce dashboard built with modern web technologies. Features real-time analytics, inventory management, and customer insights.',
    longDescription: `This project represents a complete overhaul of traditional e-commerce management systems. 
    Built with performance and user experience in mind, it provides merchants with powerful tools to 
    understand their business metrics, manage inventory efficiently, and deliver exceptional customer experiences.
    
    The dashboard features real-time data visualization, advanced filtering capabilities, and intuitive 
    navigation that makes complex data accessible to users of all technical levels.`,
    image: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&h=400&fit=crop',
    gallery: [
        'https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=600&h=400&fit=crop',
        'https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=600&h=400&fit=crop',
        'https://images.unsplash.com/photo-1554224155-6726b3ff858f?w=600&h=400&fit=crop',
    ],
    technologies: ['React', 'TypeScript', 'Node.js', 'PostgreSQL', 'Tailwind CSS', 'Chart.js'],
    features: [
        'Real-time Analytics Dashboard',
        'Inventory Management System',
        'Customer Relationship Management',
        'Advanced Reporting Tools',
        'Mobile-Responsive Design',
        'API Integration',
    ],
    status: 'Completed',
    duration: '6 months',
    team: '4 developers',
    client: 'TechCorp Solutions',
    category: 'Web Application',
    liveUrl: 'https://demo-dashboard.example.com',
    githubUrl: 'https://github.com/example/ecommerce-dashboard',
    completedDate: 'March 2024',
};
---

<MainLayout 
    title="E-Commerce Dashboard - Zentaza Project"
    description="Exploring how edge computing is transforming the IoT landscape"
>
        <!-- Hero Section -->
        <section class="relative overflow-hidden py-12 md:py-20">
            <div class="container mx-auto px-4">
                <div class="grid lg:grid-cols-2 gap-12 items-center">
                    <!-- Project Info -->
                    <div class="space-y-6">
                        <div class="space-y-2">
                            <span
                                class="inline-flex items-center px-3 py-1 text-xs font-medium bg-primary/10 text-primary rounded-full border border-primary/20"
                            >
                                {project.category}
                            </span>
                            <h1 class="text-4xl md:text-5xl font-bold tracking-tight">
                                {project.title}
                            </h1>
                            <p class="text-xl text-muted-foreground">
                                {project.subtitle}
                            </p>
                        </div>

                        <p class="text-lg text-muted-foreground leading-relaxed">
                            {project.description}
                        </p>

                        <!-- Action Buttons -->
                        <div class="flex flex-wrap gap-4 pt-4">
                            <a
                                href={project.liveUrl}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground font-medium rounded-lg hover:bg-primary/90 transition-colors"
                            >
                                <svg
                                    class="w-4 h-4"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                    ></path>
                                </svg>
                                View Live Demo
                            </a>
                            <a
                                href={project.githubUrl}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center gap-2 px-6 py-3 bg-secondary text-secondary-foreground font-medium rounded-lg hover:bg-secondary/90 transition-colors"
                            >
                                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                    <path
                                        d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                                    ></path>
                                </svg>
                                View Code
                            </a>
                        </div>
                    </div>

                    <!-- Hero Image -->
                    <div class="relative">
                        <div
                            class="absolute inset-0 bg-gradient-to-r from-primary/20 to-secondary/20 rounded-2xl blur-3xl"
                        >
                        </div>
                        <img
                            src={project.image}
                            alt={project.title}
                            class="relative w-full rounded-2xl shadow-2xl border border-border"
                        />
                    </div>
                </div>
            </div>
        </section>

        <!-- Project Details -->
        <section class="py-16 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="grid md:grid-cols-3 gap-8 mb-12">
                    <!-- Project Info Cards -->
                    <div class="bg-card rounded-2xl p-6 border border-border">
                        <h3 class="font-semibold text-card-foreground mb-4">Project Info</h3>
                        <div class="space-y-3 text-sm">
                            <div class="flex justify-between">
                                <span class="text-muted-foreground">Status</span>
                                <span class="font-medium text-card-foreground"
                                    >{project.status}</span
                                >
                            </div>
                            <div class="flex justify-between">
                                <span class="text-muted-foreground">Duration</span>
                                <span class="font-medium text-card-foreground"
                                    >{project.duration}</span
                                >
                            </div>
                            <div class="flex justify-between">
                                <span class="text-muted-foreground">Team</span>
                                <span class="font-medium text-card-foreground">{project.team}</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-muted-foreground">Client</span>
                                <span class="font-medium text-card-foreground"
                                    >{project.client}</span
                                >
                            </div>
                        </div>
                    </div>

                    <!-- Technologies -->
                    <div class="bg-card rounded-2xl p-6 border border-border">
                        <h3 class="font-semibold text-card-foreground mb-4">Technologies</h3>
                        <div class="flex flex-wrap gap-2">
                            {
                                project.technologies.map((tech) => (
                                    <span class="px-3 py-1 bg-primary/10 text-primary text-xs font-medium rounded-full border border-primary/20">
                                        {tech}
                                    </span>
                                ))
                            }
                        </div>
                    </div>

                    <!-- Key Features -->
                    <div class="bg-card rounded-2xl p-6 border border-border">
                        <h3 class="font-semibold text-card-foreground mb-4">Key Features</h3>
                        <ul class="space-y-2 text-sm">
                            {
                                project.features.slice(0, 4).map((feature) => (
                                    <li class="flex items-center gap-2 text-muted-foreground">
                                        <div class="w-1.5 h-1.5 bg-primary rounded-full" />
                                        {feature}
                                    </li>
                                ))
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- About Project -->
        <section class="py-16">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto">
                    <div class="grid lg:grid-cols-3 gap-12">
                        <!-- Main Content -->
                        <div class="lg:col-span-2 space-y-8">
                            <div>
                                <h2 class="text-3xl font-bold mb-6">About This Project</h2>
                                <div class="prose prose-lg max-w-none text-muted-foreground">
                                    {
                                        project.longDescription
                                            .split('\n\n')
                                            .map((paragraph) => (
                                                <p class="mb-4 leading-relaxed">
                                                    {paragraph.trim()}
                                                </p>
                                            ))
                                    }
                                </div>
                            </div>

                            <!-- Complete Features List -->
                            <div>
                                <h3 class="text-2xl font-semibold mb-6">Complete Feature Set</h3>
                                <div class="grid md:grid-cols-2 gap-4">
                                    {
                                        project.features.map((feature) => (
                                            <div class="flex items-center gap-3 p-4 bg-muted/50 rounded-lg border border-border">
                                                <div class="w-2 h-2 bg-primary rounded-full flex-shrink-0" />
                                                <span class="text-muted-foreground">{feature}</span>
                                            </div>
                                        ))
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Sidebar -->
                        <div class="space-y-6">
                            <!-- Quick Actions -->
                            <div class="bg-card rounded-2xl p-6 border border-border sticky top-24">
                                <h3 class="font-semibold text-card-foreground mb-4">
                                    Quick Actions
                                </h3>
                                <div class="space-y-3">
                                    <a
                                        href={project.liveUrl}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="block w-full text-center px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors"
                                    >
                                        Visit Live Site
                                    </a>
                                    <a
                                        href={project.githubUrl}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="block w-full text-center px-4 py-2 bg-muted text-foreground rounded-lg hover:bg-muted/80 transition-colors border border-border"
                                    >
                                        View Source Code
                                    </a>
                                    <button
                                        class="block w-full text-center px-4 py-2 bg-secondary text-secondary-foreground rounded-lg hover:bg-secondary/90 transition-colors"
                                    >
                                        Contact About Project
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Image Gallery -->
        <section class="py-16 bg-muted/30">
            <div class="container mx-auto px-4">
                <div class="max-w-6xl mx-auto">
                    <h2 class="text-3xl font-bold text-center mb-12">Project Gallery</h2>
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {
                            project.gallery.map((image, index) => (
                                <div class="group relative overflow-hidden rounded-2xl border border-border">
                                    <img
                                        src={image}
                                        alt={`${project.title} screenshot ${index + 1}`}
                                        class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-110"
                                    />
                                    <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                                        <button class="px-4 py-2 bg-white text-black rounded-lg font-medium">
                                            View Full Size
                                        </button>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-16 bg-gradient-to-br from-primary/10 via-transparent to-secondary/10">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto text-center">
                    <h2 class="text-3xl font-bold mb-4">Interested in Similar Work?</h2>
                    <p class="text-lg text-muted-foreground mb-8">
                        I'd love to help bring your next project to life with the same attention to
                        detail and modern approach.
                    </p>
                    <div class="flex flex-wrap justify-center gap-4">
                        <a
                            href="/contact"
                            class="px-8 py-3 bg-primary text-primary-foreground font-medium rounded-lg hover:bg-primary/90 transition-colors"
                        >
                            Start a Project
                        </a>
                        <a
                            href="/projects"
                            class="px-8 py-3 bg-muted text-foreground font-medium rounded-lg hover:bg-muted/80 transition-colors border border-border"
                        >
                            View More Projects
                        </a>
                    </div>
                </div>
            </div>
        </section>
</MainLayout>
