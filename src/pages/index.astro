---
import MainLayout from '@/layouts/MainLayout.astro';
import { Button } from '@/components/ui/button';
import { ArrowRight } from 'lucide-react';
import HeroProfileCard from '@/components/ProfileCard';
---

<MainLayout title="Home" description="Welcome to Zentaza's portfolio website">
    <!-- Hero Section -->
    <section class="py-10 md:py-12">
        <div class="container mx-auto px-4">
            <div class="flex flex-col lg:flex-row items-center gap-12">
                <div class="flex-1 text-center lg:text-left animate-fade-in">
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        Hi, I'm <span class="text-primary">Zentaza</span>
                    </h1>
                    <p class="text-xl md:text-2xl text-muted-foreground mb-8 max-w-2xl">
                        Fullstack Developer specializing in Software Engineering, Data Science/AI,
                        Cybersecurity, and IoT
                    </p>
                    <div class="flex flex-col sm:flex-row justify-center lg:justify-start gap-4">
                        <Button asChild size="lg">
                            <a href="/portfolio">
                                View My Work
                                <ArrowRight className="ml-2 h-4 w-4" />
                            </a>
                        </Button>
                        <Button asChild variant="outline" size="lg">
                            <a href="/contact"> Get In Touch </a>
                        </Button>
                    </div>
                </div>
                <div class="flex-1 w-full animate-fade-in delay-100">
                    <HeroProfileCard client:idle/>
                </div>
            </div>
        </div>
    </section>

    <!-- Skills Preview -->
    <section class="py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">What I Do</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <div
                    class="bg-card rounded-lg p-6 border border-border shadow-sm hover:shadow-md transition-shadow"
                >
                    <div class="text-4xl mb-4">üíª</div>
                    <h3 class="text-xl font-semibold mb-2">Software Engineering</h3>
                    <p class="text-muted-foreground">
                        Building robust and scalable applications with modern technologies
                    </p>
                </div>
                <div
                    class="bg-card rounded-lg p-6 border border-border shadow-sm hover:shadow-md transition-shadow"
                >
                    <div class="text-4xl mb-4">üìà</div>
                    <h3 class="text-xl font-semibold mb-2">Data Science & AI</h3>
                    <p class="text-muted-foreground">
                        Leveraging data to create intelligent solutions and insights
                    </p>
                </div>
                <div
                    class="bg-card rounded-lg p-6 border border-border shadow-sm hover:shadow-md transition-shadow"
                >
                    <div class="text-4xl mb-4">üîí</div>
                    <h3 class="text-xl font-semibold mb-2">Cybersecurity</h3>
                    <p class="text-muted-foreground">
                        Protecting digital assets with secure coding practices
                    </p>
                </div>
                <div
                    class="bg-card rounded-lg p-6 border border-border shadow-sm hover:shadow-md transition-shadow"
                >
                    <div class="text-4xl mb-4">üåê</div>
