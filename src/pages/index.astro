---
import MainLayout from '@/layouts/MainLayout.astro';
import { Button, buttonVariants } from '@/components/ui/button';
import { ArrowRight } from 'lucide-react';
import HeroProfileCard from '@/components/ProfileCard';
import SkillPreview from '@/components/Skillcard';
import AuroraText from '@/components/Auroratext';
import { TypeAnimation } from 'react-type-animation';
import { GridBackground } from '@/components/GridBackground';
---

<MainLayout title="Home" description="Welcome to Zentaza's portfolio website">
    <!-- Hero Section with Grid Background -->
    <GridBackground
        className="w-full py-10 md:py-12"
        gridSize={40}
        showFade={true}
        fadeIntensity={10}
        gridColor="#e5e7eb"
        darkGridColor="#374151"
        client:visible
    >
        <div class="container mx-auto px-4">
            <div class="flex flex-col lg:flex-row items-center gap-12">
                <div class="flex-1 text-center lg:text-left animate-fade-in">
                    <div class="flex items-start gap-3 mb-6">
                        <span class="text-4xl md:text-6xl text-start font-bold">Hi, I'm</span>
                        <AuroraText text="Zentaza" client:visible />
                    </div>
                    <!-- Fixed height container for TypeAnimation -->
                    <div
                        class="h-20 md:h-24 mb-8 flex items-center justify-center lg:justify-start"
                    >
                        <TypeAnimation
                            sequence={[
                                'Fullstack Developer specializing in Software Engineering',
                                1000,
                                'Fullstack Developer specializing in Data Science/AI',
                                1000,
                                'Fullstack Developer specializing in Cybersecurity',
                                1000,
                                'Fullstack Developer specializing in IoT Engineering',
                                1000,
                            ]}
                            wrapper="p"
                            speed={50}
                            className="text-2xl md:text-3xl text-muted-foreground max-w-2xl leading-tight"
                            repeat={Infinity}
                            client:visible
                        />
                    </div>
                    <div class="flex flex-col sm:flex-row justify-center lg:justify-start gap-4">
                        <a
                            href="/portfolio"
                            class:list={[
                                buttonVariants({ variant: 'shine', size: 'lg' }),
                                'flex items-center', // pastikan class flex ditambahkan jika perlu
                            ]}
                        >
                            View My Work
                            <ArrowRight className="ml-2 h-4 w-4" />
                        </a>
                        <a
                            href="/contact"
                            class:list={[
                                buttonVariants({ variant: 'outline', size: 'lg' }),
                                'flex items-center', // pastikan class flex ditambahkan jika perlu
                            ]}
                        >
                            Get in Touch
                        </a>
                    </div>
                </div>
                <div class="flex-1 w-full animate-fade-in delay-100">
                    <HeroProfileCard client:idle />
                </div>
            </div>
        </div>
    </GridBackground>

    <!-- Skills Preview -->
    <section class="py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">What I Do</h2>
            <SkillPreview client:visible />
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-3xl font-bold mb-4">Interested in Working Together?</h2>
            <p class="text-muted-foreground mb-8 max-w-2xl mx-auto">
                I'm always open to discussing new projects, creative ideas, or opportunities to be
                part of your vision.
            </p>
            <Button asChild size="lg">
                <a href="/contact"> Let's Connect </a>
            </Button>
        </div>
    </section>
</MainLayout>
