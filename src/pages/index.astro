---
import MainLayout from '@/layouts/MainLayout.astro';
import { AnimatedHero } from '@/components/home/HeroSection';
import { AnimatedCTA } from '@/components/home/CTASection';
import { GridBackground } from '@/components/GridBackground';
import SkillPreview from '@/components/home/Skillcard';
import Carousel3D from '@/components/home/3dCarousel';
import ScrollControlledTyping from '@/components/home/ScrollText';
import { portofolioItems } from '@/lib/allData';
---

<MainLayout title="Home" description="Welcome to Zentaza's portfolio website">
    <!-- Hero Section with Grid Background -->
    <GridBackground
        className="w-full py-10 md:py-12 flex items-center"
        gridSize={40}
        showFade={true}
        fadeIntensity={10}
        gridColor="#e5e7eb"
        darkGridColor="#374151"
        client:visible
    >
        <AnimatedHero client:visible />
    </GridBackground>

    <!-- Scroll-Controlled Typing Section -->
    <ScrollControlledTyping 
        text="Crafting digital experiences with passion, precision, and innovation. Every line of code tells a story of creativity and technical excellence."
        client:visible
    />

    <!-- Skills Preview -->
    <section class="py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">What I Do</h2>
            <SkillPreview client:visible />
        </div>
    </section>

    <!-- 3D Portfolio Carousel -->
    <section class="py-16 bg-gradient-to-b from-background to-muted/30">
        <Carousel3D 
            items={portofolioItems}
            title="Featured Projects"
            subtitle="Portfolio Showcase"
            tagline="Explore my latest projects across different domains - from AI-powered solutions to IoT innovations"
            client:visible
        />
    </section>

    <AnimatedCTA client:visible />
</MainLayout>
