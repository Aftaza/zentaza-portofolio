---
import MainLayout from '@/layouts/MainLayout.astro';
import { DescriptionSection } from '@/components/about/DescriptionSection';
import { ExperienceSection } from '@/components/about/ExperienceSection';
import { SkillsSection } from '@/components/about/SkillsSection';
import { motion } from 'framer-motion';
---

<MainLayout
    title="About"
    description="Learn more about Zentaza, a Fullstack Developer specializing in multiple domains"
>
    <div class="max-w-4xl mx-auto">
        <motion.h1 
            className="text-3xl md:text-4xl font-bold mb-8"
            initial={{ opacity: 0, y: -20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.5 }}
        >
            About Me
        </motion.h1>

        <DescriptionSection client:visible />
        <ExperienceSection client:visible />
        <SkillsSection client:visible />
    </div>
</MainLayout>
